{{page-title "Cart"}}
<div class="container mt-5">
  <h1>Shopping Cart</h1>
  <nav aria-label="breadcrumb" class="bg-light p-2 mb-3">
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <LinkTo @route="index">
          Home
        </LinkTo>
      </li>
      <li class="breadcrumb-item active">Shopping Cart</li>
    </ol>
  </nav>
  <section class="w-50 ms-auto text-end mb-5">
    <div class="row">
      <span class="col">Subtotal</span>
      <span class="col">{{this.subTotal}}</span>
    </div>
    <div class="row">
      <span class="col">Tax</span>
      <span class="col">{{this.tax}}</span>
    </div>
    <div class="row">
      <span class="col">Total</span>
      <span class="col">{{this.total}}</span>
    </div>
  </section>
  <button type="button" class="btn btn-success float-end">Checkout</button>
</div>
{{outlet}}
